FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|p_rgh)"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-7;
        relTol          0.01;
    }

    "(p|p_rgh)Final"
    {
        $p
        relTol          0;
    }

    Phi
    {
        $p;
    }

    "(U|k|omega|epsilon|h|e|T)"
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-8;
        relTol          0.1;
        nSweeps         1;
    }

    "(U|k|omega|epsilon|h|e|T)Final"
    {
        $U
        relTol          0; 
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent yes;
}

PIMPLE
{
    momentumPredictor        yes;
    nCorrectors              2;
    nOuterCorrectors         1;
    nNonOrthogonalCorrectors 0;
}

PISO
{
    $PIMPLE;
}

potentialFlow
{
    nNonOrthogonalCorrectors 10;
}

relaxationFactors
{
    equations
    {
        U                   0.9;
        "(k|omega|epsilon)" 0.7;
        "(h|e)"

        ".*Final"             1;
    }
}

cache
{
    grad(U);
}

